<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_store_page_all_title_relativelayout_title_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:backgroundTint="@color/colorBackground" >

    <TextView
        android:id="@+id/item_store_page_all_title_textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_store_page_all_title_imageview_chevron_right"
        android:fontFamily="sans-serif"
        android:padding="@dimen/heading_title_padding"
        android:text="TITLE"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/item_store_page_all_title_imageview_chevron_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/heading_title_padding"
        android:src="@drawable/icon_chevron_right_light"
        android:visibility="gone" />

</RelativeLayout>