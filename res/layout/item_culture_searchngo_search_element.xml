<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/cardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/searchngo_element_card_height"
    android:layout_margin="@dimen/main_card_margin"
    android:clickable="true"
    android:transitionName="@string/transition_view_reveal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/item_culture_searchngo_search_element_imageview_thumbnail"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_culture_searchngo_search_element_textview_title"
                style="@style/textViewTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/searchngo_element_text_margin_next_to_separator"
                android:layout_marginLeft="@dimen/searchngo_element_text_margin"
                android:layout_marginRight="@dimen/searchngo_element_text_margin"
                android:layout_marginTop="@dimen/searchngo_element_text_margin"
                android:maxLines="2"
                android:text="Title" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/searchngo_element_seperator_margin"
                android:layout_marginRight="@dimen/searchngo_element_seperator_margin" >

                <include layout="@layout/view_line_separator" />
            </FrameLayout>

            <TextView
                android:id="@+id/item_culture_searchngo_search_element_textview_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/searchngo_element_text_margin"
                android:layout_marginRight="@dimen/searchngo_element_text_margin"
                android:layout_marginTop="@dimen/searchngo_element_text_margin_next_to_separator"
                android:text="Content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_culture_searchngo_search_element_imageview_thumbnail"
            style="@style/imageViewStyle"
            android:layout_width="@dimen/video_width_small"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_video" />

        <TextView
            android:id="@+id/item_culture_searchngo_search_element_textview_provider"
            style="@style/textViewSimpleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_culture_searchngo_search_element_imageview_thumbnail"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/item_culture_searchngo_search_element_imageview_thumbnail"
            android:background="@color/colorAccent"
            android:maxLines="1"
            android:text="PROVIDER" />

        <TextView
            android:id="@+id/item_culture_searchngo_search_element_textview_type"
            style="@style/textViewSimpleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/colorAccent"
            android:maxLines="1"
            android:text="TYPE" />
    </RelativeLayout>

</android.support.v7.widget.CardView>