<?xml version="1.0" encoding="utf-8"?>
<!-- layout/content_main.xml -->

<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_boxplay_slidinglayout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="@dimen/music_player_panel_height"
    sothree:umanoShadowHeight="0dp" >

    <FrameLayout
        android:id="@+id/activity_boxplay_framelayout_container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="caceresenzo.apps.boxplay.activities.BoxPlayActivity"
        tools:showIn="@layout/activity_boxplay_bar" />

    <FrameLayout
        android:id="@+id/activity_boxplay_framelayout_container_music_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="caceresenzo.apps.boxplay.activities.BoxPlayActivity" />

</com.sothree.slidinguppanel.SlidingUpPanelLayout>