<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackgroundBorderless" >

    <ImageView
        android:id="@+id/item_music_album_imageview_thumbnail"
        android:layout_width="@dimen/music_width"
        android:layout_height="@dimen/music_width"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_video" />

    <android.support.v7.widget.CardView
        android:id="@+id/item_music_album_cardview_title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_music_album_imageview_thumbnail"
        android:layout_alignLeft="@+id/item_music_album_imageview_thumbnail"
        android:layout_alignRight="@+id/item_music_album_imageview_thumbnail"
        android:layout_margin="6dp"
        android:backgroundTint="@color/green"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
        card_view:cardElevation="@dimen/card_recycler_elevation" >

        <TextView
            android:id="@+id/item_music_album_textview_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="name"
            android:textColor="@color/white"
            android:textSize="11dp" />
    </android.support.v7.widget.CardView>

</RelativeLayout>