<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackgroundBorderless" >

    <ImageView
        android:id="@+id/item_store_page_music_list_layout_imageview_thumbnail"
        style="@style/imageViewStyle"
        android:layout_width="@dimen/music_width"
        android:layout_height="@dimen/music_width"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_video" />

    <TextView
        android:id="@+id/item_store_page_music_list_layout_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_store_page_music_list_layout_imageview_thumbnail"
        android:layout_alignRight="@+id/item_store_page_music_list_layout_imageview_thumbnail"
        android:layout_below="@+id/item_store_page_music_list_layout_imageview_thumbnail"
        android:layout_margin="6dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="name"
        android:textColor="@color/white"
        android:textSize="11dp" />

</RelativeLayout>