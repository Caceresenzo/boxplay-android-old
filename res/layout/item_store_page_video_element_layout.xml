<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_store_page_video_element_layout_imageview_thumbnail" >

        <TextView
            android:id="@+id/item_store_page_video_element_layout_textview_title"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_title_margin"
            android:layout_marginStart="@dimen/card_title_margin"
            android:layout_marginTop="@dimen/card_title_margin"
            android:text="Title"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/item_store_page_video_element_layout_textview_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_store_page_video_element_layout_textview_title"
            android:layout_marginEnd="@dimen/card_subtitle_margin"
            android:layout_marginStart="@dimen/card_subtitle_margin"
            android:layout_marginTop="@dimen/card_button_margin"
            android:text="Subtitle" />

        <TextView
            android:id="@+id/item_store_page_video_element_layout_textview_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_store_page_video_element_layout_textview_subtitle"
            android:layout_marginEnd="@dimen/card_subtitle_margin"
            android:layout_marginStart="@dimen/card_subtitle_margin"
            android:layout_marginTop="@dimen/card_button_margin"
            android:text="Details"
            android:textColor="@color/gray_deep"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/item_store_page_video_element_layout_imageview_thumbnail"
        android:layout_width="@dimen/video_width_small"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_video" />

</RelativeLayout>